<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<!-- tile 등록 -->
	<definition name="t_base" template="/WEB-INF/view/template.jsp">
		<put-attribute name="header" value="/WEB-INF/view/header.jsp"/>
		<put-attribute name="nav" value="/WEB-INF/view/nav.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/view/footer.jsp"/>
	</definition>
	
	<definition name="t_join" extends="t_base">
		<put-attribute name="title" value="JOIN"/>
		<put-attribute name="section" value="/WEB-INF/view/member/join.jsp"/>
	</definition>
	
	<definition name="t_login" extends="t_base">
		<put-attribute name="title" value="LOGIN"/>
		<put-attribute name="section" value="/WEB-INF/view/member/login.jsp"/>
	</definition>
	
	<definition name="t_market" extends="t_base">
		<put-attribute name="title" value="MARKET"/>
		<put-attribute name="section" value="/WEB-INF/view/market/list.jsp"/>
	</definition>
	
	<definition name="t_index" extends="t_base">
		<put-attribute name="title" value="SPRING WEB"/>
		<put-attribute name="section" value="/WEB-INF/view/index.jsp"/>
	</definition>
	
	<definition name="t_board">
		<put-attribute name="title" value="BOARD"/>
		<put-attribute name="section" value="/WEB-INF/view/board/list.jsp"/>
	</definition>
	
	<definition name="t_boardView" extends="t_base">
		<put-attribute name="title" expression="${t.NUM}번 글" />
		<put-attribute name="section" value="/WEB-INF/view/board/view.jsp"/>
	</definition>
	
	<definition name="t_boardAdd" extends="t_base">
		<put-attribute name="title" value="글쓰기" />
		<put-attribute name="section" value="/WEB-INF/view/board/add.jsp"/>
	</definition>
	
</tiles-definitions>	